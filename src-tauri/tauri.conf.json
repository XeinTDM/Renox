{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "renox",
  "version": "0.1.0",
  "identifier": "com.renox.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "renox",
        "width": 1150,
        "height": 650,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' https://api.github.com ws:"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["renox"]
      }
    },
    "http": { "enabled": false }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
